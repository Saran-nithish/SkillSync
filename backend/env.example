# SkillSync Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# OpenAI API Configuration (Optional - for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# JWT Configuration (For production use)
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Database Configuration (Optional - currently using in-memory storage)
# MONGODB_URI=mongodb://localhost:27017/skillsync
# DATABASE_URL=your_database_connection_string

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_DIR=uploads/

# Security Configuration
BCRYPT_ROUNDS=12

# SSL Configuration (For corporate environments)
NODE_TLS_REJECT_UNAUTHORIZED=0 